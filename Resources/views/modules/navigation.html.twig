{% if themeServices.navigation|length %}
<div class="ui secondary pointing menu" id="main-navigation">

    {#
     #  Home with a node
     #}
    {% if home %}
        <a href="#{{home.nodeSources.first.title}}" class="item" data-uk-smooth-scroll>{{ home.nodeSources.first.title }}</a>
    {% endif %}

    {#
     # Main navigation
     #}
	<!-- <ul class="ui dropdown item"> -->
		{% for cnode in themeServices.navigation %}
			{% set source = cnode.nodeSources.first %}
			{% include 'modules/navigationElement.html.twig' with {
                "source" : source,
                "active" : node,
                'securityContext':securityContext,
                'themeServices':themeServices
            } only %}
		{% endfor %}
	<!-- </ul> -->
</div>
{% endif %}
